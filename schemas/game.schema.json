{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Smart-DARTS game.yaml",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "version": { "type": "string" },
    "mode":    { "type": "string", "enum": ["Demo","501","301","Cricket","AroundTheClock"] },
    "players": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "starting_score": { "type": "integer", "minimum": 1, "maximum": 10000 },
    "sound":   { "type": "boolean" },
    "ui": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "theme": { "type": "string", "enum": ["Classic","Neon","HighContrast"] }
      }
    },
    "flags": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "strict_scoring": { "type": "boolean" },
        "celebrate_hits": { "type": "boolean" }
      }
    }
  },
  "required": ["version","mode","players"]
}
